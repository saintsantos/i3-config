# Setup variables
set $mod Mod4
set $gaps_inner 15
set $gaps_outer 3
set $border_px 2


# Application shortcuts
set $term xfce4-terminal
set $filemanager thunar
set $wallpaper ~/.i3/wallpaper/wallhaven-157062.jpg

# Startup
exec --no-startup-id ~/.i3/scripts/setdesktop.sh
exec --no-startup-id xinput set-prop 14 "Synaptics Scrolling Distance" -46, -46
exec --no-startup-id nm-applet
exec --no-startup-id compton --config ~/.i3/compton/compton.conf -b


# i3 gaps
gaps inner $gaps_inner
gaps outer $gaps_outer
smart_borders on
smart_gaps on


#remove titlebar
new_window none


#set border for i3 gaps
new_window pixel $border_px
new_float pixel $border_px

# Color Settings
client.focused #FF6600 #333333 #CCCCCC #00C1FF
client.focused_inactive #333333 #333333 #999999 #2C2C2C
client.unfocused #2C2C2C #2C2C2C #ffffff #2C2C2C
client.urgent #00C1FF #00C1FF #000088 #00C1FF


#Font information
# font pango:monospace 8
# font pango:DejaVu Sans Mono, Book 10
  font pango:Ubuntu 10


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# kill focused window
bindsym $mod+q kill


#Using rofi as an aplication launcher
bindsym Control+space exec --no-startup-id ~/.i3/scripts/rofi.sh


#screenshot tool
bindsym $mod+F10 exec scrot



# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right


# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right


# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# split in horizontal orientation
bindsym $mod+Shift+b split h

# split in vertical orientation
bindsym $mod+Shift+v split v

# toggle the split
bindsym $mod+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle


# lock screen
bindsym $mod+Control+space exec /home/edwin/.i3/scripts/lock.sh


# Volume controls
bindsym XF86AudioMute exec "amixer -D pulse set Master 1+ toggle"
bindsym XF86AudioLowerVolume exec "amixer -D pulse set Master 5%-"
bindsym XF86AudioRaiseVolume exec "amixer -D pulse set Master 5%+"

# Music Controls
bindsym XF86AudioPlay exec "playerctl play-pause"
bindsym XF86AudioNext exec "playerctl next"
bindsym XF86AudioPrev exec "playerctl previous"

# Brightness controls
bindsym $mod+F12 exec xbacklight +10
bindsym $mod+F11 exec xbacklight -10
bindsym $mod+Shift+F11 exec xbacklight -5 #Large drop off in brightness, let's you take it slow at lower brightness


# Disable/enable mouse
bindsym $mod+F7 exec xinput --disable 14
bindsym $mod+F8 exec xinput --enable 14


# toggle tiling / floating
bindsym $mod+Shift+space floating toggle


# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle


# focus the parent container
bindsym $mod+a focus parent


# Rotate through open workspaces
bindsym $mod+Control+Right workspace next
bindsym $mod+Control+Left workspace prev

#switch workspaces back and forth
bindsym $mod+Tab workspace back_and_forth

# switch to workspace
bindsym $mod+1 workspace " term"
bindsym $mod+2 workspace " web"
